<!-- views/superhero/search.ejs - Search results page -->
  <header class="text-center mb-4">
    <h1 class="display-5">Search Results for "<%= query %>"</h1>
    <p class="lead">Searching our database and the Superhero API</p>
  </header>

  <!-- Search form -->
  <div class="card mb-4">
    <div class="card-body">
      <form id="search-form">
        <div class="input-group">
          <input type="text" class="form-control" id="search-input" name="query" placeholder="Search hero name..." value="<%= query %>" required>
          <button class="btn btn-primary" type="submit">Search</button>
          <button class="btn btn-secondary" type="button" id="api-search-btn" title="Directly search the Superhero API">API Search</button>
        </div>
        <div class="form-text">
          Can't find a hero? Our application will automatically check the Superhero API for you!
        </div>
      </form>
    </div>
  </div>
  
  <!-- Search results -->
  <div id="search-results" class="mb-4">
    <% if (heroes && heroes.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <% heroes.forEach(hero => { %>
          <div class="col">
            <%- include('../partials/hero-card', { hero: hero, profile: locals.profile }) %>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        No heroes found for "<%= query %>". Try another search term or use the API search button.
        <button id="try-api-search" class="btn btn-sm btn-primary ms-2">Try API Search</button>
      </div>
    <% } %>
  </div>

  <div class="text-center mb-5">
    <a href="/" class="btn btn-outline-primary">Back to All Heroes</a>
  </div>

  <script src="/js/search.js"></script>
